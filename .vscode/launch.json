{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Service1",
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}/Source",
            "port": 9000,
            "remoteRoot": "/app",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Attach to Service2",
            "type": "coreclr",
            "request": "attach",
            "processName": "/app/DotNet/Services/Service2/bin/Debug/netcoreapp3.1/Service2",
            "justMyCode": false,
            "pipeTransport": {
                "pipeProgram": "wsl",
                "pipeCwd": "${workspaceRoot}",
                "pipeArgs": [
                    "./Source/DotNet/debug.sh"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app/DotNet": "${workspaceRoot}/Source/DotNet"
            }
        },
        {
            "name": "Attach to Service3",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 8000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceRoot}/Source/Python",
                    "remoteRoot": "/app/Python"
                }
            ]
        },
        {
            "name": "Attach to Service4",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 8001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceRoot}/Source/Python",
                    "remoteRoot": "/app/Python"
                }
            ]
        }
    ]
}